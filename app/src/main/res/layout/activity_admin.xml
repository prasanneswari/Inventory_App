<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/withoutimage"
    tools:context="com.example.shekinah.inventory.Admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="ADMIN"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:background="@drawable/whitebutton"
            android:text="Back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/emp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/whitebutton"
            android:layout_height="wrap_content"
            android:text="Employees"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>



    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/whitebutton"
        android:text="Purchase Requests"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:id="@+id/purchase_Admin" />

    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/whitebutton"
        android:text="Purchase Ordered"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:id="@+id/purchaseOrdered" />

</LinearLayout>
