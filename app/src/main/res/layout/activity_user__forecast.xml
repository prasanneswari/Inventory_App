<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/withoutimage"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="User_Forecasting"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:gravity="center" />
            <Button
                android:id="@+id/refreshUR"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/refresh"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            >

            <Button
                android:id="@+id/btnnew"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:text="New"
                android:gravity="center"
                android:background="@drawable/whitebutton"
                />
            <Button
                android:id="@+id/btnback"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:text="Back"
                android:gravity="center"
                android:background="@drawable/whitebutton"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ccc"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border_blue"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:text="Forecastid"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:text="Name"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:text="Due Date"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:text="Qtygiven"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:text="Qtyrequired"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:text="reqdate"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:text="Status"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>

                </TableRow>
            </TableLayout>

        </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/user_forecastlist"

            />




    </LinearLayout>

</LinearLayout>
