<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/withoutimage"
    tools:context="com.example.shekinah.inventory.NewRequisitionGenerate">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Generating New Requisition..."
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

        <!--   <android.support.v7.widget.Toolbar
               android:id="@+id/toolbar"
               android:layout_width="wrap_content"
               android:layout_height="?attr/actionBarSize"
               />-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Due Date"
            android:textStyle="bold"
            android:background="@drawable/border_blue"
            android:textColor="@android:color/black"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:drawablePadding="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:hint="Click Here"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColorHint="#808080"
            android:textColor="#000000"
            android:id="@+id/dueDateE" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Continue"
            android:background="@drawable/whitebutton"
            android:textColor="@android:color/black"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:id="@+id/generateDt"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</LinearLayout>
