<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shekinah.inventory.Purchase_products">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purchase_Products"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/confirmbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.3"
                android:text="orderd" />
            <Button
                android:id="@+id/receivedbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.3"
                android:text="Received"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent"
                        android:text="Purdetailsid"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:id="@+id/purdetailsid"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent"
                        android:text="Prd_Id"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:gravity="center"
                        android:layout_gravity="left"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent"
                        android:text="Prd_Name"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:gravity="center"
                        android:layout_gravity="left"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent"
                        android:text="Prd_Deses"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:gravity="center"
                        android:layout_gravity="left"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent"
                        android:text="Company"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:gravity="center"
                        android:layout_gravity="left"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent"
                        android:text="Qtyrequested"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:id="@+id/prdqty"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>
                    <!--<TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent"
                        android:text="Qtyreceived"
                        android:textColor="#000"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:id="@+id/qtyrecived"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#000">
                    </View>-->
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/purchase_prdlist"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>


    </LinearLayout>
</LinearLayout>